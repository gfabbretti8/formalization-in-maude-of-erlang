mod SEMANTICS is
  protecting SYNTAX .

  vars P1 P1' P2 : Term .
  vars M1 M2 : SumTerm .
  var x : Qid .
  vars a b : Chan .

  *** Reduction rules without alpha equivalence
  rl [R-COM] : a < b > . P1 + M1 | a(x) . P2 + M2 => P1 | [x := b] P2 .
  rl [R-REP] : a < b > . P1 + M1 | ! a(x) . P2 + M2 => P1 | [x := b] P2 | ! a(x) . P2 .
  rl [R-TAU] : tau . P1 + M1 => P1 .
endm
